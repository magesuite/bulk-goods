<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_cart_item_renderers"/>
    <body>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="fee" xsi:type="array">
                                    <item name="component" xsi:type="string">MageSuite_BulkGoods/js/view/checkout/cart/totals/bulk_goods_fee</item>
                                    <item name="sortOrder" xsi:type="string">60</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">MageSuite_BulkGoods/checkout/cart/totals/bulk_goods_fee</item>
                                        <item name="title" xsi:type="string">Bulk Goods Fee</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
